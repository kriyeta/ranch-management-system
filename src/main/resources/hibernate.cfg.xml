<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
 <session-factory>
  
    <property name="connection.url">jdbc:mysql://localhost:8889/ranch_management</property>
    <property name="connection.username">root</property>
    <property name="connection.password">root</property>
    <property name="connection.driver_class">com.mysql.jdbc.Driver</property>
    <property name="dialect">org.hibernate.dialect.MySQLDialect</property>
  
    <property name="show_sql">true</property>
  
    <property name="format_sql">true</property>
    <property name="hbm2ddl.auto">update</property>
  
    <!-- JDBC connection pool (use the built-in) -->
    <property name="connection.pool_size">1</property>
    <property name="current_session_context_class">thread</property>
 
     <mapping class="com.techlify.ranchmanager.dao.Photo" />
     <mapping class="com.techlify.ranchmanager.dao.AnimalType" />
     <mapping class="com.techlify.ranchmanager.dao.Animal" />
     <mapping class="com.techlify.ranchmanager.dao.Expense" />
     <mapping class="com.techlify.ranchmanager.dao.AnimalsMating" />
 
 <!-- <mapping resource="com/mkyong/user/DBUser.hbm.xml"></mapping> -->
</session-factory>
</hibernate-configuration>